<%- include("../includes/head.ejs") %>
    <body>
        <%- include("../includes/navigation.ejs") %>

            <%- include("../includes/head.ejs") %>
                        <div class="login-page">

                            <div class="box">
                                <div class="left">
                                    <h3>Create Account</h3>
                                    <button type="button" class="register-btn"><a href="/signup" class="new-a-href">Sign
                                            Up</a></button>
                                </div>
                                <div class="right">
                                    <h3>Have an Account ?</h3>
                                    <button type="button" class="login-btn">Login</button>
                                </div>
                                <div class="form">
                                    <!-- Login form Start -->
                                    <div class="login-form">
                                        <% if (errorMessage) { %>
                                            <div class="user-message user-message--error">
                                                <%= errorMessage %>
                                            </div>
                                            <% } %>
                                                <h3>Log In</h3>
                                                <form action="/new-password" method="POST">

                                                    <div class="form-group">
                                                        <input class="form-control" type="password" name="password"
                                                            id="password" placeholder="Password*">
                                                    </div>
                                                    <input type="hidden" name="userId" value="<%= userId %>">
                                                    <input type="hidden" name="passwordToken"
                                                        value="<%= passwordToken %>">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <button class="btn" type="submit">Update Password</button>
                                                </form>
                                                <p>You do not have account yet ? | <a href="/signup"
                                                        class="register-btn">Sign Up</a> | <a href="/reset"
                                                        class="lost-pass-btn">Lost Your Password ?</a></p>
                                    </div>
                                    <!-- Login form End -->

                                </div>
                                <!-- Register form End -->

                                <!-- Lost Password form Start -->

                            </div>
                        </div>
                        </div>

                        <script src="js/script.js"></script>
                        <%- include("../includes/footer.ejs") %>